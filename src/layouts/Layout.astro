---
import Head from "../components/Head.astro";
import "../styles/global.scss";
import "../styles/variables.scss";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />

  <body>
    <div class="layout">
      <div class="layout__side"><slot name="side" /></div>
      <main class="layout__main">
        <slot />
      </main>
    </div>
    <style lang="scss">
      @use "sass:math";
      .layout {
        display: flex;

        &__side {
          display: none;
          position: sticky;
          top: 0;
          left: 0;
          min-width: 400px;
          width: math.div(400, 1280) * 100vw;
          border-right: 1px solid #666;
          padding: 1rem;
          height: 100vh;

          @media (min-width: 1024px) {
            display: block;
          }
        }

        &__main {
          width: 100%;
          min-width: calc(100% - 400px);
          padding: 1rem;
        }
      }
    </style>
  </body>
</html>
