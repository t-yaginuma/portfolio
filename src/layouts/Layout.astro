---
import Head from "@/components/Head.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />

  <body>
    <div class="layout">
      <slot />
    </div>

    <style lang="scss">
      .layout {
        width: 100%;
        padding: 1rem;
      }
    </style>
  </body>
</html>
