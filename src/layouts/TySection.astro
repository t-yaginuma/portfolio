---
import TyHeading from "@/components/TyHeading.astro";
export interface Props {
  heading: string;
  isMaxWidth?: boolean;
}

const { heading, isMaxWidth } = Astro.props;
---

<section class:list={["ty-section", { "ty-section--max-width": isMaxWidth }]}>
  <TyHeading type="section" text={heading} />
  <div class="ty-section__content">
    <slot />
  </div>
</section>

<style lang="scss">
  .ty-section {
    &--max-width {
      max-width: 1280px;
    }

    &__content {
      margin-top: map-get($margin, 1);

      display: flex;
      flex-direction: column;
      gap: map-get($margin, 1.5);
    }
  }
</style>
