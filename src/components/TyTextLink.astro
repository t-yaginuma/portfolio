---
import TyIconExternal from "@/components/TyIconExternal.astro";
export interface Props {
  href?: string;
  isBlock?: boolean;
  isCurrent?: boolean;
}

const { href, isBlock, isCurrent } = Astro.props;
const isExternal = href?.indexOf("http") !== -1;
---

<a
  class:list={[
    "ty-text-link f-roboto",
    { "ty-text-link--block": isBlock },
    { "ty-text-link--current": isCurrent },
  ]}
  href={href}
  target={isExternal ? "_blank" : undefined}
>
  <span class="ty-text-link__content"><slot /></span>
  
  {
    isExternal && (
      <span class="ty-text-link__icon">
        <TyIconExternal />
      </span>
    )
  }
</a>

<style lang="scss">
  .ty-text-link {
    width: fit-content;
    color: $color-primary;
    font-weight: map-get($font-weight, thin);

    &:hover {
      .ty-text-link {
        &__content {
          &::after {
            width: 100%;
          }
        }
      }
    }

    &__content {
      @include strike-out-line;
    }

    &__icon {
      position: relative;
      top: -2px;
      left: -2px;
      display: inline-block;
      width: 0.6em;
      height: 0.6em;
    }

    &--block {
      display: block;
    }
    &--current {
      pointer-events: none;

      .ty-text-link {
        &__content {
          &::after {
            width: 100%;
          }
        }
      }
    }
  }
</style>
