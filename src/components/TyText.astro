---
export interface Props {
  size: "xxs" | "xs" | "sm" | "md" | "lg" | "xl" | "xxl";
  margin?: 0.5 | 1 | 1.5 | 2;
  isBold?: boolean;
}

const { size, margin, isBold } = Astro.props;
---

<p
  class:list={[
    "ty-text",
    { "ty-text--xs": size === "xs" },
    { "ty-text--sm": size === "sm" },
    { "ty-text--md": size === "md" },
    { "ty-text--lg": size === "lg" },
    { "ty-text--xl": size === "xl" },
    { "ty-text--xxl": size === "xxl" },
    { "ty-text--margin-half": margin === 0.5 },
    { "ty-text--margin-full": margin === 1 },
    { "ty-text--margin-full-lg": margin === 1.5 },
    { "ty-text--margin-double": margin === 2 },
    { "ty-text--bold": isBold },
  ]}
>
  <slot />
</p>

<style lang="scss">
  .ty-text {
    color: $color-font;

    &--xxs {
      font-size: map-get($font-size, xxs);
    }

    &--xs {
      font-size: map-get($font-size, xs);
    }

    &--sm {
      font-size: map-get($font-size, sm);
    }

    &--md {
      font-size: map-get($font-size, md);
    }

    &--lg {
      font-size: map-get($font-size, lg);
    }

    &--xl {
      font-size: map-get($font-size, xl);
    }

    &--xxl {
      font-size: map-get($font-size, xxl);
    }

    &--margin-half {
      margin-top: map-get($margin, 0.5);
    }

    &--margin-full {
      margin-top: map-get($margin, 1);
    }

    &--margin-full-half {
      margin-top: map-get($margin, 1.5);
    }

    &--margin-double {
      margin-top: map-get($margin, 2);
    }

    &--bold {
      font-weight: map-get($font-weight, bold);
    }
  }
</style>
